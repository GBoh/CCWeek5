@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @* Base Angular *@
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Angular/scripts/app.js"></script>

    <script>
        //inject stuff here
        angular
            .module('ExclusiveCarDealership')
            .constant('routeUrls', {
                vehicleApi: '@Url.HttpRouteUrl("VehicleApi",null)',
                postTesla: '@Url.HttpRouteUrl("PostTesla", null)',
                postRollsRoyce: '@Url.HttpRouteUrl("PostRollsRoyce", null)'
            });
    </script>

    @* Services *@
    <script src="~/Angular/scripts/carService.js"></script>

    @* controller *@
    <script src="~/Angular/scripts/adminController.js"></script>
    <script src="~/Angular/scripts/homeController.js"></script>
    <script src="~/Angular/scripts/loginController.js"></script>
</head>
